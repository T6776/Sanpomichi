<div class= "container">
  <div class= "mt-4">
    <h1>コース編集</h1>
  </div>
  <div>
  <%= form_with model: @course, url:course_path(@course), method: :patch, local: true do |f| %>
    <%= f.label :name, "コース名" %>
    <%= f.text_field :name %><br>
    <%= f.label :prefecture, "都道府県名" %>
    <%= f.select :prefecture, Course.areas.keys, {} %><br>
    <%= f.label :map_id, "地図URL" %>
    <%= f.text_field :map_id %><br>
    <%= f.label :image, "添付画像" %>
    <%= f.attachment_field :course_images_images, multiple: true %><br>
    <%= f.label :introduction, "説明文" %>
    <%= f.text_area :introduction %><br>

    <%=f.label :tag_ids, "タグ選択" %><br>

    <% Tag.all.each do |tag| %>
      <%= f.check_box :tag_ids,
         { multiple: true, checked: @course.tags.find_by(id: tag.id).present?,
         include_hidden: false }, tag[:id] %>
       <label class="form-check-label">
         <%= tag.name %>
       </label>
    <% end %><br>

    <%= f.label :is_hid, "公開設定" %><br>
    <%= f.radio_button :is_hid, "false" %>
    <%= f.label :is_hid, "公開する", value: false %>
    <%= f.radio_button :is_hid, "true" %>
    <%= f.label :is_hid, "公開しない", value: true %>

    <br>
    <%= f.submit "編集内容を保存",class: 'btn btn-primary btn-lg' %>
  <% end %>
  </div>

  <br>
  <div>
    <%= link_to "コースを削除する", course_path(@course), method: :delete, "data-confirm" => "本当にコースを消去しますか？", class:'btn btn-danger text-light deco-none' %>
  </div>
</div>