div.container
  div.text-danger.h2.mt-4.
    = flash[:notice]
  div.mt-4
    h2
      | マイコース一覧

  - if params[:prefecture].present?
    span.text-primary
      | 検索条件：

      = params[:prefecture]
      | &emsp;

      - if params[:tag_name]
        = params[:tag_name]

  div.row.d-flex.align-items-start
    div.col-10
      table.table.table-bordered
        thead
          tr.table-secondary
            th style="width: 20%"
              | コース名

            th style="width: 10%"
              | 都道府県

            th style="width: 20%"
              | タグ

            th style="width: 10%"
              <i class="fas fa-thumbs-up"></i>
              | いいね

            th style="width: 10%"
              | 投稿日

            th style="width: 10%"
              | 公開設定

            th style="width: 10%"
        tbody
          - @courses.each do |course|
            tr
              td
                = course.name
              td
                = course.prefecture
              td
                - course.tags.all.each do |tag|
                  = tag.name
              td.text-right
                = course.favorites.count
              td
                = course.created_at.strftime('%Y/%m/%d')
              - if course.is_hid == false
                td.text-primary
                  = course.is_hid ? "非公開" : "公開"
              - else
                td.text-danger
                  = course.is_hid ? "非公開" : "公開"
              td
                = link_to "詳細へ", course_path(course),data: {"turbolinks" => false}

    div.col-2.border.rounded.p-4
      = render "mysearchform", course: @course
