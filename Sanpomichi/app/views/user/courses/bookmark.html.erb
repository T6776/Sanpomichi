<div class= "container">
  <div class= "mt-4">
    <h1>ブックマークコース一覧</h1>
  </div>

  <div class= "row d-flex align-items-start">
    <div class= "col-8">
      <table class="table table-bordered">
        <thead>
          <tr class= "table-secondary">
            <th style="width: 20%">コース名</th>
            <th style="width: 20%">都道府県</th>
            <th style="width: 20%">タグ</th>
            <th style="width: 20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @bookmarks.each do |bookmark| %>
          <tr>
            <td><%= bookmark.course.name %></td>
            <td><%= bookmark.course.prefecture %></td>
            <td>
              <% bookmark.course.tags.all.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
            <td><%= link_to "詳細へ", course_path(bookmark.course) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class= "col-2">
      aa
    </div>
  </div>
</div>